<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Members Only Posts</title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <main>
      <% if(!locals.currentUser) { %>
        <%- include("partials/loginFirst.ejs") %>
        <% if(posts.length > 0){%> 
        <ul class="posts_list">
          <% posts.forEach(function(post) { %>
            <li class="post">
              <ul class="user_info">
                <li class="user name">Anonymous%></li>
                <li class="user username">@*****</li>  
              </ul>
              <p class="message"><%= post.message %></p>
              <p class="timestamp">Some Time Ago...%></p>
            </li>
        <% }); %>
        </ul>
        <%} else {%>
          <div class="posts_empty">
            <p>No Posts here yet.</p>
          </div>       
        <%}%>
      <%} else {%>
        <% if (posts.length > 0) {%>
          <%- include("partials/postList.ejs")%>
        <%} else {%>
          <div class="posts_empty">
            <p>No Posts here yet.</p>
            <p>Be the first to <a href="/posts/new">write</a> a message.</p>  
          </div>
        <%}%> 
      <%}%>
    </main>
  </body>
</html>
