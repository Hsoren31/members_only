<ul class="posts_list">
  <% posts.forEach(function(post) { %>
      <li class="post">
        <p><%= locals.currentUser.membership_status ? `${post.first_name} ${post.last_name}` : 'Anonymous User'%></p>
        <p><%= locals.currentUser.membership_status ? `${post.timestamp}` : 'Some Time Ago...'%></p>
        <p><%= post.message %></p>
      </li>
      <% if(locals.currentUser.admin_status) {%>
        <form action="posts/<%= post.id%>/delete" method="post">
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this message?');"
            >
            Delete Message
          </button>
        </form>
      <%}%>
  <% }); %>
</ul>